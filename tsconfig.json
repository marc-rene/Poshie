{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/*.d.ts",
        "src/**/*.d.ts",
        "src/*.tsx",
        "src/**/*.tsx",
        "src/*.vue",
        "src/**/*.vue"
    ]
}